<!doctype html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    {% image '@UserBundle/Resources/public/img/favicon.png' %}
        <link rel="icon" type="image/png" href="{{ assert_url }}">
    {% endimage %}

    <title>Se connecter | UA Messenger</title>

    <!-- Bootstrap core CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    {% stylesheets '@UserBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link href="{{ asset_url }}" rel="stylesheet">
    {% endstylesheets %}

    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</head>

<body class="text-center">
<form class="form-signin">
    {% image '@UserBundle/Resources/public/img/logo.png' %}
        <img alt="" class="mb-4 logo" src="{{ assert_url }}">
    {% endimage %}
    <h1 class="h3 mb-3 font-weight-normal">Veuillez-vous enregister</h1>



    <form action="{{ path('fos_user_security_check') }}" class="form-inline" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                </div>
                <input type="text" class="form-control" placeholder="Votre identifiant"
                       id="username" name="_username" value="{{ last_username }}">
            </div>
        </div>

        <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-lock"></i>&nbsp;</div>
                </div>
                <input type="password" class="form-control" placeholder="Votre mot de passe"
                       id="password" name="_password">
            </div>
        </div>


        <a href="#" id="forgot-password-link" target="">Informations de compte oubli√©es&nbsp;?</a>

        <hr>
        <div class="checkbox mb-3">
            <label class="label-default" id="label-move" for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" data-toggle="toggle"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
        <button class="btn btn-primary btn-send" type="submit">
            Se connecter <i class="fa fa-send-o"></i>
        </button>
    </form>


    <p class="mt-5 mb-3 text-muted" style="color: #111755 !important;">
        &copy; 2017 - 2018
    </p>
</form>
</body>
</html>
