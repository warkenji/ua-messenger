{% trans_default_domain 'FOSUserBundle' %}

<!doctype html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" type="image/png" href="{{ asset('bundles/user/img/favicon.png') }}">
    <title>Se connecter | UA Messenger</title>

    <!-- Bootstrap core CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('bundles/user/css/style.css') }}" rel="stylesheet">

    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</head>

<body class="text-center">

{% if error %}

    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>

{% endif %}

<div class="form-signin">
    <img alt="" class="mb-4 logo" src="{{ asset('bundles/user/img/logo.png') }}">

    <h1 class="h3 mb-3 font-weight-normal">Veuillez-vous enregister</h1>



    <form action="{{ path('fos_user_security_check') }}" class="form-inline" method="post">
        {% if csrf_token %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        {% endif %}


        <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                </div>
                <label for="username"></label>
                <input type="text" id="username" name="_username" placeholder="Nom d'utilisateur" value="{{ last_username }}" required="required" autocomplete="username" />

            </div>
        </div>

        <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-lock"></i>&nbsp;</div>
                </div>
                <input type="password" id="password" name="_password" placeholder="Mot de passe" required="required" autocomplete="current-password" />

            </div>
        </div>


        <a href="#" id="forgot-password-link" target="">Informations de compte oubli√©es&nbsp;?</a>

        <hr>
        <div class="checkbox mb-3">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" data-toggle="toggle"><label
                    for="remember_me"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>

        <input class="btn btn-primary btn-send" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>

    <p class="mt-5 mb-3 text-muted" style="color: #111755 !important; text-align: center;">
        &copy; 2017 - 2019
    </p>
</div>
</body>
</html>
