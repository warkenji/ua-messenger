<!DOCTYPE html>
<html lang="fr">

<head>
    <title>Profil utilisateur</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="{{ asset('bundles/user/css/profile.css') }}" rel="stylesheet">
</head>

<body>

<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="https://cdn.shopify.com/s/files/1/1136/4188/products/Orthodox_icon_of_Prophet_Ezekiel_1024x1024.jpg?v=1485984166" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        {{ user.nom }} {{ user.prenom }}
                    </div>
                    <div class="profile-usertitle-job">
                        Master 2 - MIAGE
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    <a type="button" href= "http://ua-messenger.herokuapp.com" class="btn btn-success btn-sm">Acceuil</a>
                    <a type="button" href="{{ path('fos_user_security_logout') }}" class="btn btn-danger btn-sm">Se déconnecter</a>
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="#">
                                <i class="glyphicon glyphicon-home"></i>
                                Détail du profile </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i>
                                Paramètre du compte </a>
                        </li>
                        <li>
                            <a href="#" target="_blank">
                                <i class="glyphicon glyphicon-ok"></i>
                                Agenda </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-flag"></i>
                                Aide </a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                <blockquote>
                    <br><b>Nom :</b> {{ user.nom }} <br>
                    <b>Prénom :</b> {{ user.prenom }}
                    <small><cite title="Source Title">{{ user.adresse }}<i class="icon-map-marker"></i></cite></small>
                </blockquote>
                <p>
                    <b>Numéro étudiant :</b> 59706923 <br>
                    <b>Mél. :</b> {{ user.adresse }} <br>
                    <b>Tél. :</b> {{ user.tel }} <br>
                    <b>Date de naissance :</b> June 18, 597 AC <br><br>

                    <button type="button" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i> Ajouter un CV</button>
                    <button type="button" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i> Ajouter un compte GitHub</button>
                </p>
            </div>
        </div>
    </div>
</div>

</body>

</html>
